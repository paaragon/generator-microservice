import customExpress from '../../lib/customExpress/customExpress';
import authCheck from '../mdw/authCheck';
import validateRequest from '../mdw/validateRequest';
import <%= nameCapitalized %>Ctrl from '../controllers/<%= name %>.ctrl';

const app = customExpress();

const controller = new <%= nameCapitalized %>Ctrl();

<% for (const path of controller) { %>
app.<%= path.method %>('<%= path.endpoint %>', authCheck, [], validateRequest, controller.<%= path.functionName %>);
<% } %>

export default app;
